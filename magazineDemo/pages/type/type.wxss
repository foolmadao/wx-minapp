/* pages/type/type.wxss */
.container{
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color: #ebebeb;
}
.head-container{
    margin-top: -60rpx;
    width: 650rpx;
    height: 180rpx;
    background-color: #fff;
    padding: 30rpx;
}
.head-container .head-title{
    width: 100%;
    font-size: 60rpx;
}
.head-container .head-icon{
    margin-top: 20rpx;
    width: 100%
}
.head-container .head-icon button,
.head-container .head-icon image{
    margin-right: 30rpx;
    float: right;
    width: 60rpx;
    height: 60rpx;
    background-color:transparent;
}
.head-container .head-icon button::after{
    border: none;
}
.head-container .head-icon button image{
    margin-right: -20rpx;
}

/* 文章列表样式 */
.commend-list-container{
    background-color: #ebebeb;
    width: 700rpx;
    padding: 30rpx;
    padding-bottom: 0;
}
.per-article{
    background-color: #fff;
    padding-bottom: 30rpx;
    margin-bottom: 40rpx;
}
.per-article:last-of-type{
    margin-bottom: 0;
}
.article-head{
    padding: 20rpx;
}
.article-head image{
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
    vertical-align: middle;
}
.article-head text{
    font-size: 28rpx;
    color: #666;
}

.article-cover image{
    width: 100%;
}
.article-title{
    font-size: 40rpx;
    margin: 30rpx;
    font-weight: 600;

}
.article-handle-box{
    display: flex;
    justify-content: space-between;
    padding: 0 30rpx;
}
.article-type{
    display: flex;
}
.article-type text{
    /* border: 1px solid #000; */
    padding: 10rpx 20rpx;
}
.article-handle{
    display: flex;
}
.article-handle image{
    width: 60rpx;
    height: 60rpx;
    margin-left: 20rpx;
}

.article-handle view button{
    position: relative;
    bottom: 8rpx;
    left: 4rpx;
    width: 60rpx;
    height: 60rpx;
    background-color:transparent;
    padding: 0;
}
.article-handle view button image{
    margin-left: 0;
}
.article-handle button::after{
    border: none;
}