/* pages/movie-more/movie-more.wxss */
@import '/pages/movie-list/movie-list.wxss';
.session-tab{
  width: 100%;
  display: flex;
  position: fixed;
  top: 0;
  background: #fff;
  border-width: 2rpx 0;
  border-color: #e9e9e9;
  border-style: solid;
  z-index: 9;

}
.tab-name{
  flex: 1;
  font-size: 32rpx;
  font-weight: 600;
  text-align: center;
  height: 84rpx;
  line-height: 84rpx;
}
.tab-normal{
  color: #e1e1e1;

}
.tab-select{
  color: lightgreen;
  border-bottom: 4rpx solid lightgreen
}
.session-movie{
  margin-top: 84rpx;
  background: #fff;

}
.scroll-movie{
  height: 100vh;
}
